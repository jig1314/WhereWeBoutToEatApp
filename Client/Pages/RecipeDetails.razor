@page "/recipeDetails/{id}"
@inherits RecipeDetailsBase

@if (Recipe != null)
{
<div class="card border-light mb-3" style="min-width: 18rem; max-width: 25%;">
    <div class="card-body">
        <h5 style="font:bold" class="card-title">@Recipe.Name</h5>
    </div>
    @if (string.IsNullOrWhiteSpace(Recipe.VideoURL))
    {
        <img class="card-img" src="@Recipe.ThumbnailURL">
    }
    else
    {
        <video style="height: 300px;" controls>
            <source src="@Recipe.VideoURL" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    }
    <div class="card-body">
        <a href="@Recipe.URL" class="card-link">Go to site</a>
        <button type="button" class="btn btn-link" @onclick="@(async () => await FavoriteButtonClicked())">@FavoriteState</button>
    </div>
</div>
}
else
{
    <div class="loading-bar"></div>
}

